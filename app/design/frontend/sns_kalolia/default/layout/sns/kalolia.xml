	<kalolia_pages_sales>
        <reference name="root">
            <!-- <action method="setTemplate"><template>page/1column.phtml</template></action> -->
        </reference>
		<reference name="head">
			<action method="setTitle">
				<title>Deals of the day</title>
			</action>
		</reference>
