    <?php $stores = Mage::getSingleton('adminhtml/system_store')->getStoresStructure();?>
    <span class="gfont"><?php echo $this->__('Language'); ?></span>
    <ul class="list-lang">
        <?php foreach ($stores as $store) :?>
        <?php
            //$storeId = Mage::app()->getStore()->getStoreId();
            $storeId = '';
            $langName = '';
            $langCode = '';
            if($store['label'] == 'my-tanks.de') {
                $storeId = '1';
                $langName = $this->__('German');
                $langCode = 'germany';
            } elseif ($store['label'] == 'my-tanks.eu') {
                $storeId = '2';
                $langName = 'English';
                $langCode = 'english';
            }
            $url = Mage::app()->getStore($storeId)->getBaseUrl(Mage_Core_Model_Store::URL_TYPE_LINK);
        ?>
        <li>
            <?php if($storeId != $this->getCurrentStoreId()) : ?>
                <a class="inactive-img" href="<?php echo $url ?>" title="<?php echo $this->escapeHtml($langName) ?>">
                    <img src="<?php echo $this->getSkinUrl('images/flags/'.$langCode.'.png') ?>" alt="<?php echo $this->escapeHtml($langName) ?>" width="20" height="20" />
                    <span><?php echo $this->escapeHtml($langName) ?></span>
                </a>
            <?php else : ?>
                <span class="current">
                    <img src="<?php echo $this->getSkinUrl('images/flags/'.$langCode.'.png') ?>" alt="<?php echo $this->escapeHtml($langName) ?>" width="20" height="20" />
                    <span><?php echo $this->escapeHtml($langName); ?></span>
                </span>
            <?php endif; ?>
        </li>
        <?php endforeach; ?>
    </ul>

